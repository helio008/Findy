<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".profilo">


    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nomeUtenteProfilo" android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:layout_constraintTop_toBottomOf="@+id/fotoProfilo" app:layout_constraintHorizontal_bias="0.031"
            android:textColor="@color/colorPrimary" android:textStyle="bold"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/fotoProfilo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="DOVE LAVORO?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/luoghi"
            app:layout_constraintTop_toBottomOf="@+id/nomeUtenteProfilo" android:layout_marginTop="16dp"
            android:textStyle="bold" android:textColor="@android:color/darker_gray"
            android:layout_marginStart="18dp" app:layout_constraintStart_toStartOf="parent"/>
    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/luoghi" android:id="@+id/horizontalScrollView"
            android:layout_marginStart="18dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="AVELLINO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagAvellino"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:visibility="gone"/>
            <TextView
                    android:text="BENEVENTO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagBenevento"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
            <TextView
                    android:text="CASERTA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagCaserta"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
            <TextView
                    android:text="NAPOLI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagNapoli"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:visibility="gone"/>
            <TextView
                    android:text="SALERNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagSalerno"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_weight="1"
                    android:layout_marginLeft="5dp" android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
            android:text="DI COSA MI OCCUPO?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/professioni"
            android:textStyle="bold" android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" android:layout_marginTop="18dp"
            android:layout_marginStart="18dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="DESCRIZIONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DESCRIZIONE"
            android:textStyle="bold" android:textColor="@android:color/darker_gray"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2"
            android:layout_marginStart="18dp" app:layout_constraintStart_toStartOf="parent"/>
    <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/professioni" android:id="@+id/horizontalScrollView2"
            android:layout_marginStart="18dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:text="CAMERIERE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagCameriere"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
            <TextView
                    android:text="BARMAN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagBarman"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
            <TextView
                    android:text="MAITRE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagMaitre"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
            <TextView
                    android:text="CUOCO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagCuoco"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp" android:background="@drawable/rounded_corner"
                    android:textColor="@color/colorPrimaryDark" android:layout_marginLeft="5dp"
                    android:layout_weight="1" android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/testoDescrizione" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/DESCRIZIONE"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_mode_edit_black_24dp"
            android:id="@+id/pulsanteModifica" app:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="25dp" app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/pulsanteEsci" app:layout_constraintStart_toStartOf="@+id/pulsanteModifica"
            app:layout_constraintEnd_toEndOf="@+id/pulsanteModifica" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/pulsanteModifica" android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>